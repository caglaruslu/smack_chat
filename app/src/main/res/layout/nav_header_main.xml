<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:gravity="bottom" android:id="@+id/linearLayout">

    <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            app:srcCompat="@drawable/profiledefault"
            android:contentDescription="@string/nav_header_desc"
            android:id="@+id/userImageNavHeader"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/loginButtonNavHeader"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Çağlar Uslu"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/userNameNavHeader"
            android:textColor="#ffffff" tools:text="Çağlar Uslu"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/userImageNavHeader"
            app:layout_constraintTop_toTopOf="@+id/userImageNavHeader"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="caglaruslu12@gmail.com"
            android:id="@+id/userEmailNavHeader"
            app:layout_constraintTop_toBottomOf="@+id/userNameNavHeader" android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@+id/userNameNavHeader"
            app:layout_constraintStart_toStartOf="@+id/userNameNavHeader"
            tools:text="caglaruslu12@gmail.com"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:id="@+id/loginButtonNavHeader"
            android:background="@android:color/transparent" android:textColor="#ffffff"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/userImageNavHeader"
            app:layout_constraintEnd_toEndOf="@+id/userImageNavHeader" android:onClick="loginButtonNavHeaderClicked"/>
    <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/addchannelbutton"
            android:id="@+id/addChannelButtonNavHeader"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:padding="5dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="addChannelButtonNavHeaderClicked"/>

</android.support.constraint.ConstraintLayout>
